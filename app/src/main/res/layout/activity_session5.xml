<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySession5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/as5TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0123456789"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_weight="1"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/as5Btn7"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="25sp"
                android:background="#E3F2FD"/>

            <Button
                android:id="@+id/as5Btn8"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="25sp"
                android:background="#E3F2FD"/>

            <Button
                android:id="@+id/as5Btn9"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="25sp"
                android:background="#E3F2FD"/>

            <Button
                android:id="@+id/as5BtnTotal"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="30sp"
                android:background="#90CAF9"/>

        </TableRow>

        <TableRow
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/as5Btn4"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="25sp"
                android:background="#E3F2FD"/>

            <Button
                android:id="@+id/as5Btn5"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="25sp"
                android:background="#E3F2FD"/>

            <Button
                android:id="@+id/as5Btn6"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="25sp"
                android:background="#E3F2FD"/>

            <Button
                android:id="@+id/as5BtnSub"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="30sp"
                android:background="#90CAF9"/>

        </TableRow>

        <TableRow
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/as5Btn1"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="25sp"
                android:background="#E3F2FD"/>

            <Button
                android:id="@+id/as5Btn2"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="25sp"
                android:background="#E3F2FD"/>

            <Button
                android:id="@+id/as5Btn3"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="25sp"
                android:background="#E3F2FD"/>

            <Button
                android:id="@+id/as5BtnMul"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="30sp"
                android:background="#90CAF9"/>

        </TableRow>

        <TableRow
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/as5BtnEqual"
                android:layout_height="match_parent"
                android:text="="
                android:background="#2196F3"
                android:textSize="40sp"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/as5Btn0"
                android:layout_height="match_parent"
                android:text="0"

                android:textSize="25sp"
                android:background="#E3F2FD"/>

            <Button
                android:id="@+id/as5BtnDot"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="30sp"
                android:background="#F3E5F5"/>


            <Button
                android:id="@+id/as5BtnDiv"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="30sp"
                android:background="#90CAF9"/>

        </TableRow>



    </TableLayout>

</LinearLayout>